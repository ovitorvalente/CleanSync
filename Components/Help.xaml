<Window x:Class="CleanSync.Components.Help"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CleanSync.Components"
        mc:Ignorable="d"
        Title="Ajuda - CleanSync" 
        Height="400" 
        Width="400"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="💡 AJUDA: CleanSync" FontWeight="Bold" FontSize="18" Margin="10,10" HorizontalAlignment="Center"/>

        <!-- Descrição sobre o projeto -->
        <TextBlock Grid.Row="1" Text="CleanSync é uma ferramenta para realizar a limpeza e preparação de bancos de dados antes da sincronização com a Bridge. O programa permite verificar, organizar e garantir que o banco de dados está pronto para a transferência de forma eficiente." 
                   TextWrapping="Wrap" Margin="20" FontSize="14"/>

        <!-- Texto explicativo -->
        <TextBlock Grid.Row="2" Text="Antes de iniciar qualquer operação, certifique-se de que o banco conectado é o correto. Se tiver dúvidas ou problemas, utilize o botão abaixo para entrar em contato." 
                   TextWrapping="Wrap" Margin="20" FontSize="14"/>

        <!-- Botões -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,20">
            <Button Content="Fale Conosco" Width="150" Margin="10" Click="FaleConosco_Click"/>
            <Button Content="OK" Width="150" Margin="10" Click="Ok_Click"/>
        </StackPanel>
    </Grid>
</Window>

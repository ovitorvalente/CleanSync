<Window x:Class="CleanSync.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CleanSync"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Loaded="Window_Loaded"
        Title="CleanSync"
        Icon="/CleanSyncIcon.ico"
        Height="540" 
        Width="640">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="170"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="60"/>
            </Grid.ColumnDefinitions>

            <Border Background="#1976D2"
                    Grid.Column="0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Margin="8, 0, 0, 0"
                    Padding="8"
                    Height="40"
                    Cursor="Hand"
                    ToolTip="Clique para iniciar..."
                    Focusable="True"
                    MouseLeftButtonUp="RunCleanDB"
                    CornerRadius="7">
                <TextBlock Text="▶ Iniciar Processo [F2]" 
                           Foreground="White"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>

            <Border Grid.Column="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    Background="#f1f1f1" 
                    Width="200"
                    Height="40"
                    CornerRadius="7">
                <TextBlock x:Name="ConnectionStatus"
                           Text="🔴 Banco: desconectado"
                           FontSize="14"
                           Margin="12, 0, 0, 0"
                           FontWeight="Bold"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           Foreground="Red"/>
            </Border>


            <TextBlock Cursor="Help"
                       Grid.Column="2"
                       Focusable="True"
                       ToolTip="Precisa de ajuda?"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontSize="30">
                <Hyperlink TextDecorations="None"
                           Foreground="Red"
                           NavigateUri="mailto:vitorvalente.vrsystem@gmail.com"
                           RequestNavigate="Hyperlink_RequestNavigate">
                    🆘
                </Hyperlink>
            </TextBlock>
        </Grid>

        <Grid Grid.Row="1">
            <TextBox x:Name="TerminalOutput"
                     Grid.Row="1"
                     Margin="8"
                     Padding="8"
                     FontFamily="Consolas"
                     FontSize="12"
                     IsReadOnly="True"
                     Foreground="Black"
                     Background="#f1f1f1"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto" 
                     ToolTip="Console"/>

        </Grid>

        <StatusBar Grid.Row="2">
            <TextBlock ToolTip="Clique para saber mais..." 
                       Margin="6, 0, 0, 0"
                       FontSize="12"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center">
                <Hyperlink TextDecorations="None" 
                           Foreground="#1976D2"
                           NavigateUri="https://github.com/ovitorvalente" 
                           RequestNavigate="Hyperlink_RequestNavigate">
                    © 2025 Vitor Valente. Todos os direitos reservados
                </Hyperlink>
            </TextBlock>
        </StatusBar>
    </Grid>
</Window>
